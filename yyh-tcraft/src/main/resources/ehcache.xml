<ehcache 
	xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
	updateCheck="true" 
	monitoring="autodetect" 
	dynamicConfig="true"
	maxBytesLocalHeap="500M"	
	>
	
	<cache name="users"
	      maxBytesLocalHeap="400M"
	      eternal="false"
	      timeToIdleSeconds="72000"
	      timeToLiveSeconds="86400"
	      memoryStoreEvictionPolicy="LRU"/>	      
</ehcache>